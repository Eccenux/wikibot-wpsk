{
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,

	// "**/a":true -- excludes "a" in any dir (including root)
	// "a":true -- only excludes "a" in root dir
	"files.exclude": {
		"**/*.lnk": true,
		"apicache-py3": true, 

		// defaults
		"**/.git": true,
		"**/.DS_Store": true
	},
	
	// Note, this will _not_ exclude open files
	"search.exclude": {
		// project specific
		"apicache-py3": true,
		"io": true,
		"logs": true,

		// defaults
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true
	}
}
